{% extends '::base.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="container">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-dismissable alert-{{ label }}">
                    <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row clearfix">
            <br />
            <legend>Editar Empresa</legend>
            <div class="col-md-13 column">
                {{ form_start(form, { 'style': 'horizontal' }) }}
                    {{ form_row(form.nomeEmpresa) }}                    
                    {{ form_row(form.actions) }}
                {{ form_end(form) }}      
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $(document).on('click', '#serbinario_sad_bundle_sadbundle_empresa_actions_cancel', function () {
            console.log('sfdfd');
            window.location.href = '{{path('gridEmpresa')}}';
        });
    </script>
{% endblock %}




