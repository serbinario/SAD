{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Blue Flat Button
==================================================*/
        .btn-xlarge-1 {
            position: relative;
            vertical-align: center;
            margin: 20px;
            width: 70%;
            height: 100x;
            padding: 48px 48px;
            font-size: 22px;
            color: black;
            text-align: center;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.25);
            background: #62b1d0;
            border: 0;
            border-bottom: 3px solid #9FE8EF;
            cursor: pointer;
            -webkit-box-shadow: inset 0 -3px #9FE8EF;
            box-shadow: inset 0 -3px #9FE8EF;
        }

        .btn-xlarge-2 {
            position: relative;
            vertical-align: center;
            margin: 30px;
            width: 70%;
            height: 100x;
            padding: 48px 48px;
            font-size: 22px;
            color: white;
            text-align: center;
            text-shadow: 0 1px 2px rgba(255, 0, 28, 0.25);
            background: #FF001C;
            border: 0;
            border-bottom: 3px solid #ff99ab;
            cursor: pointer;
            -webkit-box-shadow: inset 0 -3px #FF99AB;
            box-shadow: inset 0 -3px #FF99AB;
        }

        
    </style>
{% endblock %}

{% block body %}

    <div class="container">
        <center>
            <div class="row">
                {% if chamadas[0] is defined and chamadas[0].status == true %}
                    <button href="#"  class="btn btn-xlarge-1" />
                    <span style="font-size: 40px; color: #000">
                        Mesa: {{ chamadas[0].mesa }}<br/>
                        Senha: {{ chamadas[0].senha }}<br/>
                    </span>
                </button>
                {% endif %}
            </div>
        </center>
        <center>
            <div class="row">
                {% if chamadas[1] is defined and chamadas[1].status == true %}
                    <button href="#"  class="btn btn-xlarge-2" />
                    <span style="font-size: 40px; color: #fff">
                        Mesa: {{ chamadas[1].mesa }}<br/>
                        Senha: {{ chamadas[1].senha }}<br/>
                    </span>
                </button>
                {% endif %}
            </div>
        </center>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        setTimeout(function(){
            window.location.reload(1);
        }, 3000);
    </script>
{% endblock %}