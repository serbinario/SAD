{% extends '::base.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="container">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-dismissable alert-{{ label }}">
                    <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row clearfix">
            <br />
            <legend>Defina uma senha inicial</legend>
            <div class="col-md-2 column">
                <form accept-charset="UTF-8" role="form" class="form-signin" method="post"
                      action="{{ path('senhaDf') }}">
                    <div class="row">
                        <div class="form-group">
                            <label for="senha">Senha</label>
                            <input type="senha" name="senha" class="form-control" id="senha">
                        </div>
                    </div>
                    <div class="row">
                        <input class="btn btn-primary" type="submit" id="Logar" value="Redefinir">
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $(document).on('click', '#serbinario_sad_bundle_sadbundle_empresa_actions_cancel', function () {
            console.log('sfdfd');
            window.location.href = '{{path('gridEmpresa')}}';
        });
    </script>
{% endblock %}